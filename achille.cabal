name:               achille
version:            0.0.0.0
synopsis:           A library for building static site generators
author:             Lucas Escot <lucas@escot.me>
license:            MIT
license-file:       LICENSE
cabal-version:      >= 1.10
build-type:         Simple

flag pandoc
  description: Enable Pandoc support
  default: True

flag frontmatter
  description: Include recipes for parsing frontmatter
  default: True

library
  default-language:  Haskell2010
  hs-source-dirs:    src
  extensions:        BlockArguments
                   , LambdaCase
                   , TupleSections
                   , CPP
  exposed-modules:   Achille
                   , Achille.Config
                   , Achille.Writable
                   , Achille.Timestamped
                   , Achille.Internal
                   , Achille.Internal.IO
                   , Achille.Recipe
                   , Achille.Task
  build-depends:     base >= 4.11 && < 5
                   , process
                   , filepath
                   , directory
                   , Glob
                   , binary
                   , bytestring
                   , text
                   , dates
                   , time
                   , data-default
                   , blaze-html
                   , optparse-applicative

  if flag(pandoc)
    exposed-modules: Achille.Recipe.Pandoc
    build-depends:   pandoc
                   , pandoc-types
                   , blaze-markup

  if flag(frontmatter)
    exposed-modules: Achille.Recipe.Frontmatter
    build-depends:   frontmatter
                   , aeson
                   , yaml

test-suite test-achille
  type:           exitcode-stdio-1.0
  main-is:        Main.hs
  hs-source-dirs: test
  build-depends:  base >= 4.11 && < 5
                , tasty
                , tasty-hunit
                , achille
